doctype
html(lang=config.language)
    head
        include head.pug
    body
        .wrap
            header
                //- a.logo-link(href=url_for() title=config.title)
                    img.logo-image(src=url_for(theme.logo) alt='logo')
                h1.branding
                    a(href=url_for(), title=config.title)
                        if theme.logo
                            img.logo-image(src=url_for(theme.logo), alt='logo')
                        else        
                            = config.title            
                include nav.pug
            main.container
                if page.path === "tags/index.html"
                    .all-categories.tag-content
                        != list_categories({show_count: true, depth: 2, class: 'nav-category', style: 'list'})
                    .all-tags.tag-content
                        != tagcloud({min_font:12, unit: 'pt', color: true, start_color: '#47d6c7', end_color: '#fff'})
                else
                    block container
            footer
                block pagination
                block copyright
        include scripts.pug
